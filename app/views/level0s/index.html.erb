<ul id="primaryNav" class="col4">
	<li id="home"><%= link_to 'Home', root_path %></li>
	
	<% if @level0s %>
	
	<% @level0s.each do |first| %>
			<li><%= link_to first.title, first_path(first)  %>
				<ul>
				
				<% if @level1s %>
				<% @level1s.each do |second| %>
						<li><%= link_to second.title, first_second_path(first, second) %>
							<ul>
								<% if @level2s %>
								<% @level2s.each do |third| %>
									<li><%= link_to third.title, first_second_third_path(first, second, third) %></li>
								<% end %>
									<li><%= link_to_modal '+', new_first_second_third_path(first, second), :remote => true %></li>
								<% end %>
							</ul>
						</li>
				<% end %>
					<li><%= link_to_modal '+', new_first_second_path(first), :remote => true %></li>
				<% end %>
				</ul>
			</li>
	<% end %>
		<li><%= link_to_modal '+', new_first_path, :remote => true %></li>
	<% end %>